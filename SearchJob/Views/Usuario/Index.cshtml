@model Model.Models.FormPesquisar;

@{
    ViewData["Title"] = "Index";
}

<h2>Dashboard</h2>

<form asp-action="PesquisarProfissao">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CampoPesquisar" class="control-label"></label>
        <input asp-for="CampoPesquisar" class="form-control" />
        <span asp-validation-for="CampoPesquisar" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Pesquisar" class="btn btn-default" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}